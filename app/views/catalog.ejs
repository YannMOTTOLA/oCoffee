<%- include('partials/header') %>

<main>
  <section id="catalog">
    <h1>Notre catalogue</h1>

    <div class="articles only-display-3-articles" id="articles-list">
      <% for(const cafe of cafes) { %>
      <article>
        <img src="../images/coffees/<%= cafe.reference %>.png" alt="<%= cafe.nom %>" />
        <div>
          <h2><%= cafe.nom %></h2>
          <p>Origine <%= cafe.pays_nom %></p>
          <p><%= cafe.prix_kg %>€/kg</p>
          <a class="button-outline" href="/catalog/<%=cafe.id%>">Voir le détail</a>
        </div>
      </article>
      <% } %>
    </div>

    <button class="button" id="see-all-products-button" 
            onclick="document.getElementById('articles-list').classList.remove('only-display-3-articles'); 
            this.style.display='none'">
      Voir tous les produits
    </button>
</main>

<%- include('partials/footer') %>